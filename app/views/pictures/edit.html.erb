<h1>Edit Picture</h1>

<form action="http://localhost:3000/update_picture/<%= params[:id] %>">
  <div>
    <label for="caption">Caption:</label>
    <input id="caption" type="text" name="caption">
  </div>
  <div>
    <label for="source">Image URL:</label>
    <input id="source" type="text" name="source">
  </div>
  <div>
    <input type="submit" value="Create Picture">
  </div>
</form>
